<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <Button
        android:id="@+id/sport_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="414dp"
        android:layout_height="85dp"
        android:layout_marginTop="4dp"

        android:theme="@style/Button.White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#FFFFFF" />

    <TextView
            android:id="@+id/sport_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sport_name"
            app:layout_constraintBottom_toBottomOf="@+id/sport_btn"
            app:layout_constraintStart_toStartOf="@+id/sport_btn"
            app:layout_constraintTop_toTopOf="@+id/sport_btn"/>

    <TextView
        android:id="@+id/participants_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/participants_number"
        app:layout_constraintBottom_toBottomOf="@+id/sport_btn"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toStartOf="@+id/sport_name_textview"
        app:layout_constraintTop_toTopOf="@+id/sport_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>