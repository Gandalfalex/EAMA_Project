<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EventCreator.EventCreator">


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="0dp">


    <!-- location part -->


    <TextView
        android:id="@+id/event_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/new_Event_planner_headline"
        android:textSize="@dimen/activity_headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/find_location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_textview_headline"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="@string/find_location"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/gps_view"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/find_location_btn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="152dp"
        android:layout_toStartOf="@+id/find_location_btn"
        tools:srcCompat="@drawable/ic_baseline_gps_fixed" />


    <TextView
        android:id="@+id/location_textview_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_introduction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/location"
        android:textSize="@dimen/activity_sectionHeadline" />

    <TextView
        android:id="@+id/address"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/find_location_btn"
        android:layout_alignBottom="@+id/find_location_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_toStartOf="@+id/find_location_btn"
        android:text="@string/address"
        app:layout_constraintStart_toEndOf="@+id/gps_view" />

    <!-- Sport part -->

    <ImageView
        android:id="@+id/sport_view"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/find_sport_btn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="152dp"
        android:layout_toStartOf="@+id/find_sport_btn"
        tools:srcCompat="@drawable/ic_baseline_sport" />

    <TextView
        android:id="@+id/sport_textview_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_location_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="@string/sport"
        android:textSize="@dimen/activity_sectionHeadline" />

    <TextView
        android:id="@+id/sport_selection"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/find_sport_btn"
        android:layout_alignBottom="@+id/find_sport_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_toStartOf="@+id/find_sport_btn"
        android:text="@string/sport" />

    <Button
        android:id="@+id/find_sport_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sport_textview_headline"
        android:layout_alignStart="@+id/find_location_btn"
        android:layout_alignLeft="@+id/find_location_btn"
        android:layout_alignEnd="@+id/find_location_btn"
        android:layout_alignRight="@+id/find_location_btn"
        android:text="@string/find_sport"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/sport_view" />




    <!-- Time, Event, Description and Creation -->


    <TextView
        android:id="@+id/more_information_textview_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_sport_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="@string/sport"
        android:textSize="@dimen/activity_sectionHeadline" />


    <EditText
        android:id="@+id/event_date_text"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_information_textview_headline"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/event_time_text"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/event_time_text"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_information_textview_headline"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="time" />

    <EditText
        android:id="@+id/event_description"
        android:layout_width="383dp"
        android:layout_height="78dp"
        android:layout_below="@+id/more_information_textview_headline"
        android:layout_marginTop="133dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/submit_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="156dp"
        android:gravity="center"
        android:text="@string/submit"/>

  </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>